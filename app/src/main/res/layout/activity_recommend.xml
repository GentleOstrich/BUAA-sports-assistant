<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecommendActivity"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="今日天气"
            android:textColor="@color/slategray"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="天气："
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>

                <TextView
                    android:id="@+id/recommend_weather"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="温度："
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>

                <TextView
                    android:id="@+id/recommend_wendu"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="风力："
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>

                <TextView
                    android:id="@+id/recommend_fengli"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="风向："
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>

                <TextView
                    android:id="@+id/recommend_fengxiang"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:fontFamily="serif"
                    android:text=""
                    android:textColor="@color/slategray"
                    android:textSize="20dp"
                    tools:ignore="MissingConstraints"></TextView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="serif"
            android:text="推荐您做的运动为："
            android:textColor="@color/slategray"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/recommend_sport"
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:fontFamily="serif"
            android:text=""
            android:textColor="@color/slategray"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"></TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


