<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginBottom="25dp"
            tools:ignore="MissingConstraints">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_run"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="manpao"
                        android:src="@drawable/ic_manpao"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_basketball"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="lanqiu"
                        android:src="@drawable/ic_lanqiu"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_football"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="zuqiu"
                        android:src="@drawable/ic_zuqiu"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_volleyball"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="paiqiu"
                        android:src="@drawable/ic_paiqiu"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_badminton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="yumaoqiu"
                        android:src="@drawable/ic_yumaoqiu"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_swim"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="youyong"
                        android:src="@drawable/ic_youyong"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_gym"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="jianshen"
                        android:src="@drawable/ic_jianshen"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_tabletennis"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="taiqiu"
                        android:src="@drawable/ic_taiqiu"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_tennis"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="wangqiu"
                        android:src="@drawable/ic_wangqiu"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_frisbee"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="feipan"
                        android:src="@drawable/ic_feipan"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_td"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="feipan"
                        android:src="@drawable/ic_td"
                        tools:ignore="MissingConstraints" />

                    <ImageButton
                        android:id="@+id/btn_more"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        android:contentDescription="more"
                        android:src="@drawable/ic_more"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageButton
                        android:id="@+id/btn_city_walk"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/city"></ImageButton>

                    <ImageButton
                        android:id="@+id/calories"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/cal"></ImageButton>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <ImageButton
                        android:id="@+id/plan"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/fitness"></ImageButton>

                    <ImageButton
                        android:id="@+id/recommend"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:src="@drawable/recommend"></ImageButton>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>